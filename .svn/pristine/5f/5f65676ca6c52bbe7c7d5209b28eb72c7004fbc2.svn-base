    android:layout_width="match_parent"
    android:layout_height="30dp"
      >
      <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="@string/shangjiajieshao" 
    android:layout_centerInParent="true"
          />
   
  </RelativeLayout>
    <View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/textgraylight"
      />  
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/auto"
      >

      <ImageView
          android:id="@+id/shangjia_image"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_weight="42"
          android:src="@drawable/shangpin_image" />

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="106dp"
          android:layout_weight="43.02" >

          <TextView
              android:id="@+id/tv_shangjianame_detail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:text="万里汽修"
              android:textSize="17dp"
           />

          <TextView
              android:id="@+id/address_detail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/tv_shangjianame_detail"
              android:layout_below="@+id/tv_shangjianame_detail"
              android:text="地址："
              android:textColor="@color/textgraydark" />

          <TextView
              android:id="@+id/shangjia_address_detail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_shangjianame_detail"
              android:layout_toRightOf="@id/address_detail"
              android:text="环城北路环城北路环城北路"
              android:textColor="@color/textgraydark" />

          <TextView
              android:id="@+id/call1_shangjia_detail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/tv_shangjianame_detail"
              android:layout_below="@+id/shangjia_address_detail"
              android:text="电话："
              android:textColor="@color/textgraydark" />

          <TextView
              android:id="@+id/call_shangjia_detail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/shangjia_address_detail"
              android:layout_toRightOf="@+id/call1_shangjia_detail"
              android:text="8787777777"
              android:textColor="@color/textgraydark" />
          
      </RelativeLayout>
  
    <RelativeLayout 
    android:id="@+id/rel_baidumap"
    android:layout_width="0dp"
    android:layout_weight="24"
    android:layout_height="100dp"
        >
     <View   
    android:layout_width="1dp"
    android:layout_height="match_parent" 
    android:background="@color/textgraylight"
