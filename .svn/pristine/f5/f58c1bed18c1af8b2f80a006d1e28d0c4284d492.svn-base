<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/orangelight">

        <LinearLayout
          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                 android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/addbaoxian"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_commit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lin_back"
            android:layout_marginRight="21dp"
            android:src="@drawable/right" />

    </RelativeLayout>
    
<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/danhao"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="交强险单号："
     android:textSize="16dp"
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <EditText
     android:id="@+id/edt_danhao" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="10dp"
     android:hint="请输入保险单号"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>

<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/tv_danwei"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="投保单位："
     android:textSize="16dp"
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <EditText
     android:id="@+id/edt_danwei" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="10dp"
     android:hint="请输入投保单位"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/rel_data"
    android:layout_width="match_parent"
    android:layout_height="40dp" >

    <TextView
        android:id="@+id/tv_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="保险到期日期："
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/go" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/imageView1"
       
        android:textColor="@color/textgraydark" />

</RelativeLayout>

<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/tv_feiyong"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="保险费用："
     android:textSize="16dp"
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <EditText
     android:id="@+id/edt_feiyong" 
     android:layout_width="140dp"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="20dp"
     android:hint="0.0"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>
    <EditText 
    android:id="@+id/edt_beizhu"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/auto"
    android:layout_width="match_parent"
    android:layout_height="110dp" 
    android:hint="@string/beizhu"
        />
</LinearLayout>
