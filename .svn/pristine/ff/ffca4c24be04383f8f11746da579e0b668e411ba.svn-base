<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginBottom="5dp"
      >
       <ImageView 
           android:id="@+id/shangjia_image"
           android:layout_width="130dp"
           android:layout_height="100dp" 
           android:src="@drawable/shangpin_image"/>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="5dp"
           android:layout_weight="2" >

           <TextView
               android:id="@+id/tv_shangjianame"
               android:layout_marginTop="20dp"
               android:textSize="18dp"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="" />
      

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_shangjianame"
            android:layout_below="@+id/tv_shangjianame"
            android:text="地址："
            android:textColor="@color/textgraydark"
          />

        <TextView
            android:id="@+id/shangjia_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shangjianame"
            android:layout_toRightOf="@id/address"
            android:text=""
            android:textColor="@color/textgraydark"
             />
        
          <TextView 
            android:id="@+id/call1_shangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shangjia_address"
            android:layout_alignLeft="@+id/tv_shangjianame"
           android:textColor="@color/textgraydark"
            android:text="电话："
            />
   
          <TextView 
            android:id="@+id/call_shangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shangjia_address"
            android:layout_toRightOf="@+id/call1_shangjia"
            android:textColor="@color/textgraydark"
            android:text=""
            />
          
       
       </RelativeLayout>
       
          <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp" 
            android:src="@drawable/go" 
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
               />
</LinearLayout>
</LinearLayout>
