<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/orangelight">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_carnumber_bac"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/car_number"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_commit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lin_back"
            android:layout_marginRight="21dp"
            android:src="@drawable/right" />

    </RelativeLayout>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/belongto"
        android:layout_width="40dp"
        android:layout_height="40dp"
         android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="#00AEAE"
        android:gravity="center"
        android:text="京" />

    <EditText
        android:id="@+id/et_car"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/carnumber"
        android:hint="请输入正确的车牌号"
        android:textSize="15dp"
       >
    </EditText>
</LinearLayout>

<RelativeLayout 
    android:id="@+id/girdviewlistent2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:visibility="gone"

    >

    <GridView
        android:id="@+id/gridview2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingTop="8dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="9"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" >
    </GridView>

</RelativeLayout >
</LinearLayout>
