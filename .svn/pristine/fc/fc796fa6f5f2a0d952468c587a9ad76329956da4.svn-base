<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
   <RelativeLayout 
        android:id="@+id/rel_link"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/orangelight">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_box_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/box"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout> 
<TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
     android:paddingLeft="5dp"
     android:text="@string/boxmanange"
    />

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
     android:orientation="vertical"
    >
   <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
       >
      <TextView 
    android:id="@+id/tv_xuleihao"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:text="@string/xuliehao"
          /> 
      <TextView 
    android:id="@+id/tv_xuliehao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/tv_xuleihao"
    android:textColor="@color/textgraylight"
    android:text=""
          /> 
   </RelativeLayout>
   
   
     <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
       >
      <TextView 
    android:id="@+id/tv_jihuoshijian2"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:text="@string/jihuoshijian"
          /> 
      <TextView 
    android:id="@+id/tv_jihuoshijian"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/textgraylight"
    android:layout_toRightOf="@+id/tv_jihuoshijian2"
    android:text=""
          /> 
   </RelativeLayout>
   
</LinearLayout>
<LinearLayout 
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:orientation="horizontal"
    android:background="@color/white"
       >
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content" 
    android:layout_weight="1"
    android:layout_marginTop="20dp" 
    android:layout_marginLeft="10dp"
          >

   <TextView
       android:id="@+id/changebox"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="@color/textgraydark"
       android:gravity="center"
       android:text="@string/changebox"
       android:textColor="@color/white" />
          
    </RelativeLayout> 
    <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content" 
    android:layout_gravity="right"
    android:layout_weight="1"
    android:layout_marginRight="10dp"
          >
     <TextView
          android:id="@+id/zhuxiaobox"
           android:layout_marginTop="20dp" 
           android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/orangelight"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/zhuxiaobox"/>
      </RelativeLayout>

   </LinearLayout>
</LinearLayout>
