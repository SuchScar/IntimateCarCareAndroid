<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginBottom="5dp"
      >
       <ImageView 
           android:id="@+id/shangpin_image"
           android:layout_width="110dp"
           android:layout_height="100dp" 
           android:src="@drawable/shangpin_image"/>
 
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           
           android:layout_weight="2" >

           <TextView
               android:id="@+id/tv_shangpinname"
               android:layout_marginTop="20dp"
               android:textSize="18dp"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:text="" />
      

        <ImageView
            android:id="@+id/tv_price_o"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/tv_shangpinname"
            android:layout_below="@+id/tv_shangpinname"
             android:src="@drawable/price"
            android:textColor="@color/textgraydark"
          />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shangpinname"
            android:layout_toRightOf="@id/tv_price_o"
            android:text=""
            android:layout_marginTop="5dp"
            android:textColor="@color/textgraydark"
             />
        
          <TextView 
            android:id="@+id/shangjia_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
             android:layout_marginLeft="5dp"
            android:textColor="@color/textgraydark"
            android:layout_marginTop="8dp"
            android:text="商家名称："
            />
   
          <TextView 
            android:id="@+id/tv_shangjianame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_price"
            android:layout_toRightOf="@+id/shangjia_name"
            android:textColor="@color/textgraydark"
            android:text=""
            />
          
       
       </RelativeLayout>
       
          <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp" 
            android:src="@drawable/go" 
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
               />
</LinearLayout>
</LinearLayout>
