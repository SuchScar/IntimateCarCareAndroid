<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/auto"
    >
   <TextView 
       android:id="@+id/tv_data"
       android:layout_centerVertical="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="2015"
       /> 
   <ImageView 
       android:id="@+id/xiugai"
       android:layout_width="20dp"
       android:layout_height="30dp"
       android:src="@drawable/xiugai"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       /> 
</RelativeLayout>
<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/servicecycle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="@string/servicecycle"
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <TextView
     android:id="@+id/tv_servicecycle" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/servicecycle"
     android:text="3333333"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>

<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/priject"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="@string/project"
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <TextView
     android:id="@+id/tv_priject" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/priject"
     android:text="空调皮带、清洗油路、助力泵皮带、刹车油、燃油滤芯器"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>


<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/feiyong"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="保险费用："
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <TextView
     android:id="@+id/tv_feiyong" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/feiyong"
     android:text="1000"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>
<RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="40dp"
    >
  <TextView 
      android:id="@+id/beizhu"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:text="备注："
     android:textStyle="bold"
     android:layout_marginLeft="5dp"
      />  
    <TextView
     android:id="@+id/tv_beizhu" 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/beizhu"
     android:text="无"
     android:textColor="@color/textgraydark"
     android:layout_centerVertical="true"
        />
</RelativeLayout>
</LinearLayout>
